<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#6ed56a"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_last_week"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="上一周"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size_4" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="课程表(本周)"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_next_week"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="下一周"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <!--周一-->
        <LinearLayout
            android:id="@+id/ll_monday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周一"

                android:textColor="@color/text_color1"
                android:textSize="@dimen/text_size_3" />

            <View
                android:id="@+id/v_monday"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#6ed56a" />
        </LinearLayout>
        <!--周二-->
        <LinearLayout
            android:id="@+id/ll_tuesday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周二"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/text_size_3" />

            <View
                android:id="@+id/v_tuesday"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#00000000" />
        </LinearLayout>
        <!--周三-->
        <LinearLayout
            android:id="@+id/ll_wednesday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周三"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/text_size_3" />

            <View
                android:id="@+id/v_wednesday"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#00000000" />
        </LinearLayout>
        <!--周四-->
        <LinearLayout
            android:id="@+id/ll_thursday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周四"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/text_size_3" />

            <View
                android:id="@+id/v_thursday"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#00000000" />
        </LinearLayout>
        <!--周五-->
        <LinearLayout
            android:id="@+id/ll_friday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周五"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/text_size_3" />

            <View
                android:id="@+id/v_friday"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#00000000" />
        </LinearLayout>
        <!--周六-->
        <LinearLayout
            android:id="@+id/ll_saturday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周六"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/text_size_3" />

            <View
                android:id="@+id/v_saturday"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#00000000" />
        </LinearLayout>
        <!--周日-->
        <LinearLayout
            android:id="@+id/ll_week"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周日"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/text_size_3" />

            <View
                android:id="@+id/v_week"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#00000000" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5" />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/id_swipe_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_big"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="没有课程！"
                android:textSize="@dimen/text_size_4"
                android:textColor="@color/text_color3"/>

            <cn.waycube.wrjy.views.NoScrollListView

                android:id="@+id/lv_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#e5e5e5"
                android:dividerHeight="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#e5e5e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:background="#6ed56a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="小课"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/text_size_4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#e5e5e5" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_small"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="没有可预约的小课！"
                android:textSize="@dimen/text_size_4"
                android:textColor="@color/text_color3"/>
            <cn.waycube.wrjy.views.NoScrollListView

                android:id="@+id/lv_list2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#e5e5e5"
                android:dividerHeight="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#e5e5e5" />

        </LinearLayout>
    </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>