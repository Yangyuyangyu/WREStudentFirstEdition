<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="93dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius_bottom_left="2dip"
            app:riv_corner_radius_bottom_right="2dip"
            app:riv_corner_radius_top_left="2dip"
            app:riv_corner_radius_top_right="2dip"
            app:riv_mutate_background="true"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/text_size_3" />

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/text_size_2" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:textColor="@color/text_color1"
                android:textSize="@dimen/text_size_2" />
        </LinearLayout>
        <!--评价-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="68dp"
                android:layout_height="26dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_bg2"
                android:gravity="center"
                android:text="确认上课"
                android:textColor="#EE7B1E"
                android:textSize="@dimen/text_size_3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_evaluate"
                android:layout_width="68dp"
                android:layout_height="26dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="评价"
                android:textColor="#1EACEE"
                android:textSize="@dimen/text_size_3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_multiple_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="待上课"
                android:textColor="#FF2C4F"
                android:textSize="@dimen/text_size_3"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/tv_evaluate_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_affirm_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看课程记录"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/text_size_2" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="4dp"
                    android:src="@mipmap/open_ico" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>